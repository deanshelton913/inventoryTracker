<% provide(:title, 'Add New Project') %>
<h1>New Project</h1>
<div class="row">
	<div class="span6 offset3">
		<div id="alerts"></div>
		<%= form_for(@project) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :company, "Who is this contract with?" %>
		<%= f.text_field :company, :value => @project[:company], :placeholder => "e.g.: Disney, or Apple" %>

		<%= f.label :contract_start_date %>
		<div class="input-append datepicker" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
			<%= f.text_field :contract_start_date, :value => @project[:contract_start_date], :class => "span2", :id => "startDate"%>
			<span class="add-on"><i class="icon-calendar"></i></span>
  		</div>

		<%= f.label :contract_end_date %>
		<div class="input-append datepicker" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
			<%= f.text_field :contract_end_date, :value => @project[:contract_end_date], :class => "span2", :id => "endDate" %>
			<span class="add-on"><i class="icon-calendar"></i></span>
  		</div>

		<%= f.label :name, "Project Name" %>
		<%= f.text_field :name, :value => @project[:name] %>

		<%= f.label :total_budget %>
		<%= f.text_field :total_budget, :value => @project[:total_budget] %>

		<%= f.label :remaining_budget %>
		<%= f.text_field :remaining_budget, :value => @project[:remaining_budget] %>

		<div class="row">
			<div class="span6">
				<%= f.submit "Add New Project", class: "btn btn-large btn-primary" %>
			</div>
		</div>
		
		<% end %>
	</div>
</div>