<% provide(:title, 'Add New Employee') %>
<h1>New Employee</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@employee) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :first_name %>
		<%= f.text_field :first_name, :value => @employee[:first_name] %>

		<%= f.label :last_name %>
		<%= f.text_field :last_name, :value => @employee[:last_name] %>

		<%= f.label :email %>
		<%= f.text_field :email, :value => @employee[:email] %>

		<%= f.label :phone %>
		<%= f.text_field :phone, :value => @employee[:phone] %>

		<%= f.submit "Add New Employee", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>