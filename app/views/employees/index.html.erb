<% provide(:title, 'All Employees') %>
<div class="row">
  <div class="span10">
    <table class="table">
    	<thead>
    		<tr>
    			<th>First Name</th>
    			<th>Last Name</th>
    			<th>Email</th>
    			<th>phone</th>
			</tr>
		</thead>
		<tbody>	
        <% @employees.each do |item| %>
   			<tr>
   				<td><%=item.first_name %></td>
   				<td><%=item.last_name %></td>
   				<td><%=item.email %></td>
   				<td><%=item.phone %></td>
   			</tr>
   		<% end %>
	    </tbody>
	</table>
  </div>
  <div class="row">
  	<div class="span10">
<%= link_to "Add New Employee", new_employee_path %>
</div>
</div>
</div>