<% unless @inventoryitem.nil? %>
	<% if @inventoryitem.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			The form contains <%= pluralize(@inventoryitem.errors.count, "error") %>.
		</div>
		<ul>
			<% @inventoryitem.errors.full_messages.each do |msg| %>
				<li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
<% end %>

